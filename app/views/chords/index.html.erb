<p id="notice"><%= notice %></p>

<h1>Chordex</h1>
<%= search_form_for @q do |f| %>
    <%= f.label :chords_cont %>
    <%= f.search_field :chords_cont %>
    <%= f.submit %>
<% end %>
<table>
  <thead>
    <tr>
      <th>Song</th>
      <th>Artist</th>
      <th>YouTube</th>
      <th>Spotify</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @chords.each do |chord| %>
      <tr>
        <td><%= link_to(chord.song, chord.page_url) %></td>
        <td><%= chord.artist %></td>
        <td>
          <%= link_to(image_tag('youtube.svg', width: '25'), @youtube_url + chord.song + '+' + chord.artist) %>
        </td>
        <td>
          <%= link_to(image_tag('spotify.svg', width: '25'), @spotify_url + chord.song + '%20' + chord.artist) %>
        </td>
        <td><%= link_to 'Show', chord %></td>
        <td><%= link_to 'Edit', edit_chord_path(chord) %></td>
        <td><%= link_to 'Destroy', chord, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Chord', new_chord_path %>
